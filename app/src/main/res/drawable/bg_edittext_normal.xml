<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!--模拟背景的padding区域  和背景不突兀 看不出的颜色-->
<item>
    <shape>
        <!-- 实心 -->
        <solid android:color="@android:color/transparent"/>
    </shape>
</item>
<!--模拟背景的padding的size 6dp-->
<item
    android:bottom="@dimen/dp10"
    android:left="@dimen/dp10"
    android:right="@dimen/dp10"
    android:top="@dimen/dp10">
    <!--原来的需求区域-->
    <shape>
        <!-- 实心 -->
        <solid android:color="@color/transprent"/>
        <!-- 边框 -->
        <stroke
            android:width="2px"
            android:color="#BDC7D8" />
        <!-- 圆角 -->
        <corners android:radius="@dimen/dp25"/>
    </shape>

</item>
</layer-list>
