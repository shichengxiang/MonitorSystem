<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/colorPrimary">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="@dimen/dp10"
		android:paddingTop="@dimen/dp10">

		<ImageView
			android:id="@+id/iv_img1"
			android:layout_width="@dimen/dp40"
			android:layout_height="@dimen/dp40"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dp20"
			android:scaleType="fitCenter"
			android:src="@mipmap/ic_launcher_round"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/iv_img1"
			android:text="预警通知"
			android:textColor="@color/white"
			android:layout_marginLeft="@dimen/dp15"/>
		<TextView
			android:id="@+id/tv_grade_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/shape_circle_25"
			android:layout_centerVertical="true"
			android:layout_toLeftOf="@+id/tv_grade_2"
			android:textColor="@color/white"
			android:gravity="center"
			android:text="3"
			android:layout_marginRight="@dimen/dp15"/>
		<TextView
			android:id="@+id/tv_grade_2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/shape_circle2_25"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:textColor="@color/white"
			android:gravity="center"
			android:text="3"
			android:layout_marginRight="@dimen/dp20"/>

	</RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/line_height"
		android:layout_marginLeft="@dimen/dp20"
		android:background="@color/lineBG"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="@dimen/dp10"
		android:paddingTop="@dimen/dp10">

		<ImageView
			android:id="@+id/iv_img2"
			android:layout_width="@dimen/dp40"
			android:layout_height="@dimen/dp40"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dp20"
			android:scaleType="fitCenter"
			android:src="@mipmap/ic_launcher_round"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:text="故障通知"
			android:textColor="@color/white"
			android:layout_marginLeft="@dimen/dp15"
			android:layout_toRightOf="@id/iv_img2"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/shape_circle_25"
			android:layout_centerVertical="true"
			android:gravity="center"
			android:textColor="@color/white"
			android:layout_alignParentRight="true"
			android:text="3"
			android:layout_marginRight="@dimen/dp20"/>

	</RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/line_height"
		android:layout_marginLeft="@dimen/dp20"
		android:background="@color/lineBG"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="@dimen/dp10"
		android:paddingTop="@dimen/dp10">

		<ImageView
			android:id="@+id/iv_img3"
			android:layout_width="@dimen/dp40"
			android:layout_height="@dimen/dp40"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dp20"
			android:scaleType="fitCenter"
			android:src="@mipmap/ic_launcher_round"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dp15"
			android:text="维护通知"
			android:textColor="@color/white"
			android:layout_toRightOf="@id/iv_img3"/>

	</RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/line_height"
		android:background="@color/lineBG"/>


</LinearLayout>