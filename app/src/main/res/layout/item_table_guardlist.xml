            android:textColor="@color/txt_normal"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/lineBG"/>

</LinearLayout>