<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/bg"
	android:orientation="vertical">

	<android.support.v7.widget.Toolbar
		style="@style/MyToolBar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/colorPrimary"
		android:fitsSystemWindows="true"
		android:minHeight="?attr/actionBarSize">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:text="水利监控"
				android:padding="@dimen/dp15"
				android:textColor="@color/white"/>
		</RelativeLayout>

	</android.support.v7.widget.Toolbar>

	<com.szugyi.circlemenu.view.CircleLayout
		android:id="@+id/circleMenu"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:layout_marginLeft="@dimen/dp20"
		android:layout_marginRight="@dimen/dp20"
		android:background="@drawable/shape_circle"
		android:layoutMode="opticalBounds"
		app:firstChildPosition="North">

		<TextView
			android:id="@+id/toMonitor"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableTop="@mipmap/ic_launcher"
			android:shadowColor="@color/colorPrimary"
			android:text="监控"
			android:gravity="center"
			android:textColor="@color/white"/>

		<TextView
			android:id="@+id/toNotifications"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableTop="@mipmap/ic_launcher"
			android:shadowColor="@color/colorPrimaryDark"
			android:text="通知"
			android:gravity="center"
			android:textColor="@color/white"/>

		<TextView
			android:id="@+id/toSafeGuard"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableTop="@mipmap/ic_launcher"
			android:text="维护"
			android:gravity="center"
			android:textColor="@color/white"/>

		<TextView
			android:id="@+id/toCenter"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableTop="@mipmap/ic_launcher"
			android:text="个人中心"
			android:gravity="center"
			android:textColor="@color/white"/>

	</com.szugyi.circlemenu.view.CircleLayout>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:text="2017/6\n 12:00"
		android:textColor="@color/white"
		android:gravity="center"
		android:background="@drawable/shape_circle_small"/>

</RelativeLayout>