<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/dp10"
		app:cardElevation="@dimen/dp3">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/bg_white_radius2"
			android:orientation="vertical">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="@dimen/dp10"
					android:text="密云水库"
					android:textColor="@color/txt_normal"
					android:textSize="@dimen/dp15"/>

				<TextView
					android:id="@+id/alarmTag"
					android:layout_width="@dimen/dp10"
					android:layout_height="@dimen/dp10"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:layout_marginRight="@dimen/dp15"
					android:background="@drawable/shape_circle_25"
					android:gravity="center"
					android:textColor="@color/txt_normal"
					android:textSize="@dimen/dp15"/>
			</RelativeLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:paddingLeft="@dimen/dp10"
				android:paddingRight="@dimen/dp10"
				android:text="故障情况\n	123\n	123"/>

			<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/line_height"
				android:background="@color/lineBG"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/dp15"
				android:layout_marginTop="@dimen/dp15">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="@dimen/dp10"
					android:layout_toLeftOf="@+id/click_toSure"
					android:background="@drawable/bg_gray_radius2"
					android:paddingBottom="@dimen/dp5"
					android:paddingLeft="@dimen/dp15"
					android:paddingRight="@dimen/dp15"
					android:paddingTop="@dimen/dp5"
					android:text="忽略"
					android:textColor="@color/white"
					android:textSize="@dimen/dp13"/>

				<TextView
					android:id="@+id/click_toSure"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="@dimen/dp10"
					android:layout_toLeftOf="@+id/click_toDispatch"
					android:background="@drawable/bg_login_normal"
					android:paddingBottom="@dimen/dp5"
					android:paddingLeft="@dimen/dp15"
					android:paddingRight="@dimen/dp15"
					android:paddingTop="@dimen/dp5"
					android:text="确认"
					android:textColor="@color/white"
					android:textSize="@dimen/dp13"/>

				<TextView
					android:id="@+id/click_toDispatch"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_marginRight="@dimen/dp10"
					android:background="@drawable/bg_login_normal"
					android:paddingBottom="@dimen/dp5"
					android:paddingLeft="@dimen/dp15"
					android:paddingRight="@dimen/dp15"
					android:paddingTop="@dimen/dp5"
					android:text="派发"
					android:textColor="@color/white"
					android:textSize="@dimen/dp13"/>

			</RelativeLayout>

		</LinearLayout>
	</android.support.v7.widget.CardView>

</LinearLayout>